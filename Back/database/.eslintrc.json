{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": ["error", "always"], // Requiere punto y coma al final de cada declaración
        "quotes": ["error", "single"], // Requiere comillas simples para las cadenas de caracteres
        "indent": ["error", 2], // Requiere una sangría de 2 espacios
        "comma-spacing": ["error", { "before": false, "after": true }], // Requiere un espacio después de las comas, pero no antes
        "object-curly-spacing": ["error", "always"], // Requiere espacios dentro de las llaves de los objetos
        "array-bracket-spacing": ["error", "never"], // Requiere que no haya espacios dentro de los corchetes de los arrays
        "no-trailing-spaces": "error", // Prohíbe espacios en blanco al final de las líneas
        "no-unused-vars": "warn", // Advierte sobre variables declaradas pero no utilizadas
        "no-console": "off" // Deshabilita las advertencias sobre el uso de console.log
      }
  }
        
